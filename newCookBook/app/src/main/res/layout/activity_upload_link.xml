<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_ok"
    tools:context=".UploadLink">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="342dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/uploadImageLink"
                android:layout_width="match_parent"
                android:layout_height="157dp"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_menu_gallery" />

            <Button
                android:id="@+id/btnChooseLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:fontFamily="casual"
                android:text="choose image"
                android:textStyle="bold" />

        </LinearLayout>

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="53dp" />

        <EditText
            android:id="@+id/txtLinkName"
            android:layout_width="match_parent"
            android:layout_height="355dp"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="casual"
            android:hint="The dish name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtTheLink"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="casual"
            android:hint="Link"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="351dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/SaveLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:fontFamily="casual"
                android:onClick="saveAndUpload"
                android:text="SAVE"
                android:textStyle="bold" />

            <Button
                android:id="@+id/BackLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:fontFamily="casual"
                android:onClick="back"
                android:text="BACK"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>